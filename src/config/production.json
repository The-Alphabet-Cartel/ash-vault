{
	"_metadata": {
		"file_version": "v5.0",
		"last_modified": "2025-01-03",
		"clean_architecture": "Compliant",
		"description": "Ash-Thrash v5.0 Production Configuration Overrides",
		"note": "This file contains ONLY values that differ from default.json",
		"repository": "https://github.com/the-alphabet-cartel/ash-thrash",
		"community": "The Alphabet Cartel - https://discord.gg/alphabetcartel | https://alphabetcartel.org"
	},

	"logging": {
		"description": "Logging configuration for structured output",
		"level": "${BOT_LOG_LEVEL}",
		"format": "${BOT_LOG_FORMAT}",
		"file": "${BOT_LOG_FILE}",
		"console": "${BOT_LOG_CONSOLE}",
		"defaults": {
			"level": "INFO",
			"format": "json",
			"file": "/app/logs/ash-thrash.log",
			"console": true
		},
		"validation": {
			"level": {
				"type": "string",
				"allowed_values": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
				"required": true
			},
			"format": {
				"type": "string",
				"allowed_values": ["json", "text"],
				"required": true
			},
			"file": {
				"type": "string",
				"required": true
			},
			"console": {
				"type": "boolean",
				"required": false
			}
		}
	}
}
